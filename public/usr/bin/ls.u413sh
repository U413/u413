if(eval "$1 === '--help'" $1) {
	echo "Usage: ls [dir]";
	echo "List the files in the directory. dir defaults to cwd.";
	return;
}

if(exists $1) {
	set dir $1;
}
else {
	set dir $path;
}

# Relative paths
if(eval "!$1.startsWith('/')" $dir) {
  set dir $PWD$1;
}

# Use lsCache instead of /ls/bin directly
eval "(await shell.lsCache.get($1)).map(v => v.name)" $dir;
